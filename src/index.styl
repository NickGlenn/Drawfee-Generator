#roll {
  display: block;
  margin: 1em auto;
  padding: 0.5em 1em;
  font: inherit;
  font-size: 1.5em;
  background: #D21E31;
  color: #fff;
  border: 0;
  border-radius: 4px;
  cursor: pointer;

  &:disabled {
    display: none;
  }
}

.Footer {
  margin: 3em auto;
  max-width: (850/(16*1.5)em);
  line-height: 1.45;
  text-align: center;

  #odds {
    margin-bottom: 3em;
    font-size: 1.5em;
  }

}